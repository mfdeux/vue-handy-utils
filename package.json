{
  "name": "vue-handy-utils",
  "version": "0.1.0",
  "description": "Handy utilities when building web apps using VueJS",
  "license": "MIT",
  "author": {
    "name": "Marc Ford",
    "url": "https://github.com/mfdeux"
  },
  "homepage": "https://github.com/mfdeux/vue-handy-utils",
  "bugs": "https://github.com/mfdeux/vue-handy-utils/issues",
  "main": "dist/index.js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mfdeux/vue-handy-utils.git"
  },
  "keywords": [
    "library",
    "vue",
    "vuejs"
  ],
  "files": [
    "lib",
    "dist/*.js"
  ],
  "scripts": {
    "build": "webpack --config ./build/webpack.client.config.js --progress --hide-modules",
    "lint": "eslint lib",
    "preview": "standard-version --dry-run",
    "release": "standard-version && git push --follow-tags && npm publish",
    "test": "npm run lint && npm run unit",
    "unit": "jest --maxWorkers=4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint",
      "pre-push": "npm test"
    }
  },
  "peerDependencies": {
    "moment": "^2.24.0",
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "babel-loader": "^8.0.6",
    "babel-preset-es2015": "^6.24.1",
    "codecov": "latest",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "latest",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "latest",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "latest",
    "file-loader": "^4.0.0",
    "husky": "latest",
    "jest": "latest",
    "jsdom": "latest",
    "nuxt": "latest",
    "standard-version": "latest",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "vue-loader": "^15.7.0",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5",
    "webpack-merge": "^4.2.1"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0"
  },
  "@std/esm": {
    "mode": "js",
    "cjs": true
  },
  "eslintConfig": {
    "globals": {
      "ENV": true
    },
    "env": {
      "jest": true
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "modulePaths": [
      "<rootDir>/../../node_modules",
      "<rootDir>/../../packages"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "browserslist": "> 0.25%, not dead"
}
